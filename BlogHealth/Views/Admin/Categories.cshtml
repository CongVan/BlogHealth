            save: function (e) {
                console.log("save");
                console.log(e);
                var slug = bodauTiengViet(e.model.Name);
                $.ajax({
                    url: '/Admin/UpdateCategories',
                    data: { ID: e.model.ID, Name: e.model.Name, Slug: slug ,Color:e.model.Color,Priority:e.model.Priority,},
                    type: 'post',
                    success: function (data) {
                        if (data == 1) {
